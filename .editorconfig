# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# C++ files
[*.{cpp,hpp,c,h,cc,cxx,hxx}]
indent_size = 4
max_line_length = 100

# CMake files
[CMakeLists.txt,*.cmake]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2