{
  "name": "qui-browser-vr",
  "version": "2.0.0",
  "description": "Qui Browser VR - Lightweight WebXR browser for VR devices",
  "main": "index.html",
  "private": true,
  "scripts": {
    "start": "echo 'Open index.html in your VR device browser'",
    "serve": "python -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "playwright test",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "benchmark": "node tools/benchmark.js",
    "benchmark:all": "node tools/benchmark.js --all --iterations 500",
    "benchmark:module": "node tools/benchmark.js --module",
    "benchmark:report": "node tools/benchmark.js --all --output benchmark-results.md --format markdown",
    "ci:test": "npm run test && npm run test:coverage",
    "ci:lint": "npm run lint && npm run format:check",
    "ci:all": "npm run ci:lint && npm run ci:test",
    "docker:build": "docker build -t qui-browser-vr:2.0.0 .",
    "docker:run": "docker run -d -p 8080:80 qui-browser-vr:2.0.0",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prepare": "echo 'Setup complete'"
  },
  "keywords": [
    "vr",
    "webxr",
    "virtual-reality",
    "meta-quest",
    "pico",
    "browser",
    "lightweight",
    "3d",
    "spatial-audio",
    "hand-tracking"
  ],
  "dependencies": {
    "three": "^0.152.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  },
  "author": "Qui Browser Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
