# Environment Configuration Example for Qui Browser VR
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
VR_BROWSER_VERSION=2.0.0

# Server Configuration (for development)
PORT=8000
HOST=0.0.0.0

# Build Configuration
BUILD_TARGET=production
SOURCE_MAPS=false

# Feature Flags
ENABLE_PERFORMANCE_MONITOR=true
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false

# VR Configuration
VR_DEFAULT_FPS_TARGET=90
VR_MIN_FPS_TARGET=72
VR_MEMORY_LIMIT_MB=2048

# Analytics (optional)
# ANALYTICS_ID=
# SENTRY_DSN=

# CDN (optional)
# CDN_URL=https://cdn.example.com

# API Endpoints (if needed in future)
# API_BASE_URL=https://api.example.com
# API_TIMEOUT=30000

# Cache Configuration
CACHE_VERSION=v2.0.0
CACHE_MAX_AGE=31536000
SERVICE_WORKER_CACHE_SIZE=50

# Security
# SESSION_SECRET=your-secret-here
# CORS_ORIGIN=*

# Deployment
DEPLOY_ENVIRONMENT=development
# DEPLOY_URL=https://your-domain.com

# Testing
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=50

# Docker
DOCKER_IMAGE_NAME=qui-browser-vr
DOCKER_IMAGE_TAG=2.0.0
DOCKER_REGISTRY=

# Monitoring (optional)
# MONITORING_ENABLED=false
# PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
ENABLE_GZIP=true
ENABLE_BROTLI=true
COMPRESSION_LEVEL=6

# VR Device Settings
DEFAULT_ENVIRONMENT=space
DEFAULT_UI_LAYOUT=comfortable
DEFAULT_INPUT_MODE=hybrid

# Accessibility
DEFAULT_TEXT_SCALE=1.0
DEFAULT_HIGH_CONTRAST=none
ENABLE_VOICE_CONTROL=true
VOICE_CONTROL_LANGUAGE=ja-JP

# Advanced
ENABLE_WEBGL2=true
ENABLE_WEBXR=true
ENABLE_HAND_TRACKING=true
ENABLE_SPATIAL_AUDIO=true

# Stripe Billing Configuration
BASE_URL=http://localhost:8000
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PREMIUM_MONTHLY_JPY=price_premium_monthly_jpy
STRIPE_PRICE_PREMIUM_YEARLY_JPY=price_premium_yearly_jpy
STRIPE_PRICE_PRO_MONTHLY_JPY=price_pro_monthly_jpy
STRIPE_PRICE_PRO_YEARLY_JPY=price_pro_yearly_jpy

# Stripe Price IDs (USD)
STRIPE_PRICE_PREMIUM_MONTHLY_USD=price_premium_monthly_usd
STRIPE_PRICE_PREMIUM_YEARLY_USD=price_premium_yearly_usd
STRIPE_PRICE_PRO_MONTHLY_USD=price_pro_monthly_usd
STRIPE_PRICE_PRO_YEARLY_USD=price_pro_yearly_usd

# Billing Configuration
ENABLE_BILLING=true
BILLING_CURRENCY=JPY
TRIAL_PERIOD_DAYS=14
ENABLE_AUTOMATIC_TAX=true

# Development
DEV_SERVER_OPEN=false
DEV_SERVER_HTTPS=false
HOT_RELOAD=true
