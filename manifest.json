{
  "name": "Qui Browser VR - WebXR VR Browser",
  "short_name": "Qui VR",
  "description": "Next-generation WebXR browser with 100+ language support, WebGPU (1000% boost), ETFR (36-52% GPU savings), WCAG AAA accessibility, and PWA offline support",
  "version": "3.7.1",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#0052cc",
  "background_color": "#000000",
  "lang": "en",
  "dir": "ltr",

  "categories": ["productivity", "utilities", "entertainment", "vr", "webxr"],

  "icons": [
    {
      "src": "/assets/icons/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],

  "screenshots": [
    {
      "src": "/assets/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "モバイル版ホーム画面"
    },
    {
      "src": "/assets/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "デスクトップ版ダッシュボード"
    }
  ],

  "shortcuts": [
    {
      "name": "VR Browser",
      "short_name": "VR Mode",
      "description": "Launch VR browsing mode",
      "url": "/public/vr-browser.html",
      "icons": [
        {
          "src": "/assets/icons/icon-192.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "VR Video",
      "short_name": "VR Video",
      "description": "Watch 360° and 3D videos in VR",
      "url": "/public/vr-video.html",
      "icons": [
        {
          "src": "/assets/icons/icon-192.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "VR browser settings",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/assets/icons/icon-192.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+qui",
      "url": "/?protocol=%s"
    },
    {
      "protocol": "web+https",
      "url": "/?url=%s"
    },
    {
      "protocol": "web+http",
      "url": "/?url=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/?action=open-file",
      "accept": {
        "text/html": [".html", ".htm"],
        "text/plain": [".txt", ".md"],
        "application/json": [".json"],
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp", ".svg"]
      }
    }
  ],

  "share_target": {
    "action": "/?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", ".pdf"]
        }
      ]
    }
  },

  "related_applications": [],

  "prefer_related_applications": false,

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "handle_links": "preferred",

  "display_override": ["standalone", "minimal-ui", "browser"],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "id": "qui-browser-pwa",

  "note_taking": {
    "new_note_url": "/?action=new-note"
  }
}
